{
    "appId": "studio.openvoxel.ovlauncher",
    "productName": "OpenVoxel Launcher",
    "copyright": "Copyright Â© 2023 OpenVoxel Studios",
    "mac": {
        "category": "public.app-category.games",
        "icon": "./icons/icon.icns",
        "target": [
            {
                "target": "dmg",
                "arch": [
                    "arm64",
                    "universal"
                ]
            },
            {
                "target": "zip",
                "arch": [
                    "arm64",
                    "universal"
                ]
            }
        ],
        "extendInfo": "openvoxel"
    },
    "win": {
        "icon": "./icons/icon.ico",
        "publisherName": "OpenVoxel Studios",
        "target": [
            {
                "target": "nsis",
                "arch": [
                    "x64"
                ]
            },
            {
                "target": "portable",
                "arch": [
                    "x64"
                ]
            }
        ]
    },
    "dmg": {
        "background": "./icons/background.png",
        "icon": "./icons/cmdblock.icns",
        "title": "OpenVoxel Launcher Installer"
    },
    "nsis": {
        "oneClick": false,
        "perMachine": false,
        "allowToChangeInstallationDirectory": true,
        "installerIcon": "./icons/icon.ico",
        "uninstallerIcon": "./icons/icon.ico",
        "createDesktopShortcut": true,
        "createStartMenuShortcut": true
    },
    "extraResources": [
        "./assets/mcversion.json",
        "./assets/servericon.txt",
        "./games/*.json",
        "./assets/**/*",
        "./assets/mods/**/*",
        "./intern.json"
    ],
    "protocols": {
        "name": "openvoxel",
        "schemes": [
            "openvoxel",
            "openvoxellauncher"
        ]
    }
}